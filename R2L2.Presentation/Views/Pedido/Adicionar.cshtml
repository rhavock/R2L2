<div ng-controller="PedidoController">
    <section>
        <div class="section-header">
            <ol class="breadcrumb">
                <li class="active">Cadastro de Pedido</li>
            </ol>
        </div>
        <div class="section-body">
            <div class="col-lg-offset-1 col-md-8">
                <div class="row">
                    <div class="btn-group pull-right btn-inter-div">
                            <a class="btn ink-reaction btn-floating-action btn-lg btn-info" href="#offcanvasadd" data-toggle="offcanvas" ng-click="Adicionar(pedido)">
                                <i class="md md-check"></i>
                            </a>
                        </div>
                    <div class="card">
                        <div class="card-head style-gray-light">
                            <div class="tools pull-left" style="vertical-align:sub;">
                                <form class="navbar-search" style="z-index:6;">
                                    <div class="form-group">
                                        <input type="text" class="form-control" id="clienteSearch" placeholder="Escolha o Cliente" />
                                    </div>
                                    <button type="button" class="btn btn-icon-toggle ink-reaction" ng-click="PesquisarCliente()">
                                        <i class="md md-person"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="card-body no-padding">
                            <div class="list-results">
                                <div class="col-xs-12 col-lg-6 hbox-xs ink-reaction" ng-repeat="cliente in clientes">

                                    <div class="hbox-column v-top">
                                        <div class="clearfix">
                                            <div class="col-lg-12 margin-bottom-lg">
                                                <a class="text-lg text-medium" href="#">{{cliente.Nome}}</a>
                                            </div>
                                        </div>
                                        <div class="clearfix opacity-75">
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
